<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
  <action-mappings>
    <!-- OrthoMCL-specific actions -->
    <action path="/showLayout"
        parameter="org.orthomcl.controller.action.ShowLayoutAction"
        type="org.gusdb.wdk.controller.actionutil.WdkActionWrapper">
      <forward name="layout" path="/wdkCustomization/jsp/records/group-layout.jsp"/>
    </action>
    <action path="/getDataSummary"
        parameter="org.orthomcl.controller.action.GetDataSummaryAction"
        type="org.gusdb.wdk.controller.actionutil.WdkActionWrapper">
      <forward name="data" path="/wdkCustomization/jsp/DataSummary.jsp"/>
      <forward name="release" path="/wdkCustomization/jsp/ReleaseSummary.jsp"/>
    </action>
    <action path="/proteomeUpload"
        parameter="org.orthomcl.controller.action.ProteomeUploadAction"
        type="org.gusdb.wdk.controller.actionutil.WdkActionWrapper">
      <forward name="success" path="/wdkCustomization/jsp/proteomeUpload.jsp"/>
    </action>
    <action path="/proteomeDownload"
        parameter="org.orthomcl.controller.action.ProteomeDownloadAction"
        type="org.gusdb.wdk.controller.actionutil.WdkActionWrapper">
      <forward name="input" path="/WEB-INF/jsp/proteomeNotFound.jsp"/>
    </action>
  </action-mappings>
</struts-config>
